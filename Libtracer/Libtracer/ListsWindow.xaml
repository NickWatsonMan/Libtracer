<Window x:Class="Libtracer.ListsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Libtracer"
        mc:Ignorable="d"
        Title="ListsWindow" Height="300" Width="300" Top="200" Left="400">
    <Grid>
        <TabControl>
            <TabItem Header="Должники">
                <Grid Background="#FFE5E5E5">
                    <ListBox/>
                </Grid>
            </TabItem>
            <TabItem Header="Выданные книги">
                <Grid Background="#FFE5E5E5">
                    <ListBox/>
                </Grid>
            </TabItem>
        </TabControl>
        <Button Name="ListsBack" Grid.Column="1" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Content="←" FontSize="14" Click="ListsBack_Click"/>
    </Grid>
</Window>
